<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/custom_background_secondary_inactive"
    android:minHeight="100dp">

    <TextView
        android:id="@+id/fragment_hidden_id"
        android:layout_width="43dp"
        android:layout_height="78dp"
        android:textSize="1px"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="10dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_name_small"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_name_small"
        app:layout_constraintRight_toRightOf="@+id/fragment_name_small"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_name_small"
        />

    <TextView
        android:id="@+id/fragment_name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/custom_background_button"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/fragment_name_small"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_name_small"
        android:layout_width="43dp"
        android:layout_height="78dp"
        android:layout_marginStart="16dp"
        android:background="#FFFFFF"
        android:padding="7px"
        android:textSize="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <Button
        android:id="@+id/fragment_button"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/secondary_button"
        android:text="Скачать"
        android:textColor="@color/custom_background_button"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/fragment_authors"
        app:layout_constraintTop_toBottomOf="@+id/fragment_name" />

    <TextView
        android:id="@+id/fragment_authors"
        android:layout_width="197dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/custom_background_button"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/fragment_name_small"
        app:layout_constraintTop_toBottomOf="@+id/fragment_name" />

</androidx.constraintlayout.widget.ConstraintLayout>